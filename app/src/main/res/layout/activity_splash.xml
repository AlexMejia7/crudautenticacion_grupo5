<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/uth"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tvCatedratico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catedrático: Ricardo Lagos"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvClase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programación Móvil I"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo 5 - Integrantes:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvIntegrante1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randulfo Alonso Mejía #202010010594"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvIntegrante2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alex Nain Mejía #200630520001"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvIntegrante3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dennis Elias Maradiaga #202310010219"
        android:textSize="16sp"
        android:textColor="#000000" />
</LinearLayout>